{
  "extends": ["config:base"],
  "prCreation": "not-pending",
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "Jest and ts-jest",
      "matchPackageNames": ["jest", "ts-jest", "@types/jest"]
    }
  ]
}
